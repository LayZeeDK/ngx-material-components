{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "ngx-material-components": {
      "root": "projects/ngx-material-components",
      "sourceRoot": "projects/ngx-material-components/src",
      "projectType": "library",
      "prefix": "mdc",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-ng-packagr:build",
          "options": {
            "tsConfig": "projects/ngx-material-components/tsconfig.lib.json",
            "project": "projects/ngx-material-components/ng-package.json"
          },
          "configurations": {
            "production": {
              "project": "projects/ngx-material-components/ng-package.prod.json"
            }
          }
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "main": "projects/ngx-material-components/src/test.ts",
            "tsConfig": "projects/ngx-material-components/tsconfig.spec.json",
            "karmaConfig": "projects/ngx-material-components/karma.conf.js"
          }
        },
        "lint": {
          "builder": "@angular-devkit/build-angular:tslint",
          "options": {
            "tsConfig": [
              "projects/ngx-material-components/tsconfig.lib.json",
              "projects/ngx-material-components/tsconfig.spec.json"
            ],
            "exclude": [
              "**/node_modules/**"
            ]
          }
        }
      }
    }
  },
  "defaultProject": "ngx-material-components",
  "cli": {
    "packageManager": "yarn"
  },
  "schematics": {
    "@schematics/angular:component": {
      "changeDetection": "OnPush",
      "prefix": "mdc",
      "spec": false,
      "styleext": "scss",
      "viewEncapsulation": "None"
    },
    "@schematics/angular:class": {
      "spec": false
    },
    "@schematics/angular:directive": {
      "prefix": "mdc",
      "spec": false
    },
    "@schematics/angular:guard": {
      "spec": false
    },
    "@schematics/angular:module": {
      "spec": false
    },
    "@schematics/angular:pipe": {
      "spec": false
    },
    "@schematics/angular:service": {
      "spec": false
    }
  }
}